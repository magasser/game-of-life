{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "..",
                "-G",
                "NMake Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Create build folder"
            ]
        },
        {
            "label": "CMake Release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "..",
                "-G",
                "NMake Makefiles",
                "-DCMAKE_BUILD_TYPE=Release",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Create build folder"
            ]
        },
        {
            "label": "NMake Build Debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "nmake",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "CMake Debug"
            ]
        },
        {
            "label": "NMake Rebuild Debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "nmake",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean build folder",
                "CMake Debug"
            ]
        },
        {
            "label": "NMake Rebuild Release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "nmake",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean build folder",
                "CMake Release"
            ]
        },
        {
            "label": "NMake Clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "nmake",
            "args": [
                "clean"
            ]
        },
        {
            "label": "NMake Test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "nmake",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "NMake Build Debug"
            ]
        },
        {
            "label": "Create build folder",
            "type": "shell",
            "command": "New-Item",
            "args": [
                "${workspaceRoot}/build",
                "-ItemType",
                "Directory",
                "-Force",
                "|",
                "Out-Null"
            ]
        },
        {
            "label": "Clean build folder",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "git",
            "args": [
                "clean",
                "-Xdf"
            ]
        }
    ]
}